{
  "name": "claude-input-enhancer",
  "displayName": "Claude Input Enhancer",
  "description": "Enhanced text input panel for Claude Code terminal",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-input-enhancer.openInputPanel",
        "title": "Open Claude Input Panel",
        "category": "Claude"
      },
      {
        "command": "claude-input-enhancer.sendToClaudeTerminal",
        "title": "Send to Claude Terminal",
        "category": "Claude"
      }
    ],
    "views": {
      "terminal": [
        {
          "id": "claudeInputView",
          "name": "Claude Input",
          "when": "true"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "claudeInputView",
        "contents": "Enhanced input for Claude Code\n[Open Input Panel](command:claude-input-enhancer.openInputPanel)"
      }
    ],
    "keybindings": [
      {
        "command": "claude-input-enhancer.openInputPanel",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "!terminalFocus"
      }
    ],
    "configuration": {
      "title": "Claude Input Enhancer",
      "properties": {
        "claudeInputEnhancer.clearAfterSend": {
          "type": "boolean",
          "default": false,
          "description": "Clear input panel after sending text to Claude terminal"
        },
        "claudeInputEnhancer.panelPosition": {
          "type": "string",
          "enum": ["sidebar", "bottom", "floating"],
          "default": "sidebar",
          "description": "Position of the input panel"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/node": "20.x",
    "typescript": "^5.4.5"
  }
}